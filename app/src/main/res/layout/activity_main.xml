<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.wdyuekao0601.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_name"
            android:hint="请输入搜索菜名"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sou"
            android:text="搜索"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="#000"></View>

    <com.example.administrator.wdyuekao0601.utils.MyViewGroup
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/mvg"></com.example.administrator.wdyuekao0601.utils.MyViewGroup>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv"></ListView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/del"
        android:text="清空历史数据"/>



</LinearLayout>
